<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3a0056"
    tools:context="com.example.owner.donkicutesnoteweather.MainActivity">

    <android.support.constraint.Guideline
        android:id="@+id/gl_v_65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.78" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_v_35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.39" />
    <android.support.constraint.Guideline
        android:id="@+id/gl_h_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20"/>
    <android.support.constraint.Guideline
        android:id="@+id/gl_h_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30"/>
    <android.support.constraint.Guideline
        android:id="@+id/gl_h_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40"/>
    <android.support.constraint.Guideline
        android:id="@+id/gl_h_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50"/>
    <android.support.constraint.Guideline
        android:id="@+id/gl_h_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.60"/>


    <Button
        android:id="@+id/bt_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@android:drawable/ic_menu_send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/gl_v_65"
        app:layout_constraintTop_toTopOf="@+id/gl_h_20" />

    <TextView
        android:id="@+id/tv_city"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="City"
        android:background="#fff866"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gl_h_30"
        app:layout_constraintEnd_toStartOf="@+id/gl_v_35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gl_h_20" />

    <TextView
        android:id="@+id/tv_humility"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Humility"
        android:background="#fff97f"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/gl_h_40"
        app:layout_constraintEnd_toStartOf="@+id/gl_v_35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gl_h_30" />

    <TextView
        android:id="@+id/tv_tmin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#fff97f"
        android:gravity="center"
        android:text="T Min"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gl_h_50"
        app:layout_constraintEnd_toStartOf="@+id/gl_v_35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gl_h_40" />

    <TextView
        android:id="@+id/tv_getHum"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="#d5ffb8"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/gl_h_40"
        app:layout_constraintEnd_toStartOf="@+id/gl_v_65"
        app:layout_constraintStart_toStartOf="@+id/gl_v_35"
        app:layout_constraintTop_toTopOf="@+id/gl_h_30" />

    <TextView
        android:id="@+id/tv_tmax"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#fff97f"
        android:gravity="center"
        android:text="T Max"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gl_h_60"
        app:layout_constraintEnd_toStartOf="@+id/gl_v_35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gl_h_50" />

    <TextView
        android:id="@+id/tv_getTmax"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:background="#d5ffb8"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/gl_h_60"
        app:layout_constraintEnd_toStartOf="@+id/gl_v_65"
        app:layout_constraintStart_toStartOf="@+id/gl_v_35"
        app:layout_constraintTop_toTopOf="@+id/gl_h_50" />

    <TextView
        android:id="@+id/tv_getTmin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:background="#d5ffb8"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/gl_h_50"
        app:layout_constraintEnd_toStartOf="@+id/gl_v_65"
        app:layout_constraintStart_toStartOf="@+id/gl_v_35"
        app:layout_constraintTop_toTopOf="@+id/gl_h_40" />

    <EditText
        android:id="@+id/et_cityname"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="#d5ffb8"
        app:layout_constraintBottom_toTopOf="@+id/gl_h_30"
        app:layout_constraintEnd_toStartOf="@+id/gl_v_65"
        app:layout_constraintStart_toStartOf="@+id/gl_v_35"
        app:layout_constraintTop_toTopOf="@+id/gl_h_20" />
</android.support.constraint.ConstraintLayout>
